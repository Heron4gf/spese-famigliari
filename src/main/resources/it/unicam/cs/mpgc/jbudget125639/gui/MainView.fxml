<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicam.cs.mpgc.jbudget125639.gui.MainViewController">

    <padding>
        <!-- SINTASSI CORRETTA PER INSETS -->
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <left>
        <VBox spacing="10" alignment="TOP_CENTER">
            <padding>
                <Insets right="10"/>
            </padding>
            <Label text="Utenti e Viste" style="-fx-font-weight: bold;"/>
            <ListView fx:id="viewsListView" prefWidth="200" VBox.vgrow="ALWAYS"/>
            <Button text="Nuovo Utente" onAction="#handleAddNewUser" prefWidth="200"/>
        </VBox>
    </left>

    <center>
        <VBox fx:id="detailsPane" spacing="15" alignment="TOP_LEFT" visible="false">
            <padding>
                <Insets left="10"/>
            </padding>

            <Label fx:id="viewNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
            <Label fx:id="viewBalanceLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>

            <Separator/>
            <Label text="Transazioni" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>

            <TableView fx:id="transactionsTableView" prefHeight="250">
                <columns>
                    <TableColumn text="Direzione" prefWidth="80"/>
                    <TableColumn text="Importo" prefWidth="120"/>
                    <TableColumn text="Descrizione" prefWidth="200"/>
                    <TableColumn text="Data" prefWidth="120"/>
                </columns>
                <columnResizePolicy><TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/></columnResizePolicy>
            </TableView>

            <VBox fx:id="userControlsPane" spacing="10">
                <Button text="Elimina Transazione Selezionata" onAction="#handleDeleteTransaction"/>
                <Separator/>
                <Label text="Aggiungi Nuova Transazione" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="10" alignment="CENTER_LEFT">
                    <TextField fx:id="transactionDescriptionField" promptText="Descrizione" HBox.hgrow="ALWAYS"/>
                    <TextField fx:id="transactionAmountField" promptText="Importo" prefWidth="80"/>
                    <ChoiceBox fx:id="transactionCurrencyChoiceBox" prefWidth="80"/>
                    <ChoiceBox fx:id="transactionDirectionChoiceBox" prefWidth="100"/>
                    <Button text="Aggiungi" onAction="#handleAddTransaction"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>