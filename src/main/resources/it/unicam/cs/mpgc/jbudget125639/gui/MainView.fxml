<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="it.unicam.cs.mpgc.jbudget125639.gui.MainViewController">

    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>

    <top>
        <VBox spacing="10">
            <!-- View Selection and User Controls -->
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Vista:" style="-fx-font-weight: bold;"/>
                <ComboBox fx:id="viewsComboBox" prefWidth="200"/>
                <Button text="Elimina Vista" onAction="#handleDeleteView"/>
                <Button text="Nuovo Utente" onAction="#handleAddNewUser"/>
            </HBox>
            
            <!-- Filters Section -->
            <VBox fx:id="filtersPane" spacing="10" visible="false">
                <Label text="Filtri Transazioni" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                <HBox spacing="15" alignment="CENTER_LEFT">
                    <VBox spacing="5">
                        <Label text="Periodo:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="timeSpanFilterComboBox" prefWidth="150"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Direzione:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="directionFilterComboBox" prefWidth="120"/>
                    </VBox>
                    <VBox spacing="5">
                        <Label text="Tag:" style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="tagFilterComboBox" prefWidth="150"/>
                    </VBox>
                </HBox>
            </VBox>
            
            <Separator/>
        </VBox>
    </top>

    <center>
        <VBox fx:id="detailsPane" spacing="15" alignment="TOP_LEFT" visible="false">
            <!-- View Header Section -->
            <VBox spacing="5">
                <Label fx:id="viewNameLabel" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>
                <Label fx:id="viewBalanceLabel" style="-fx-font-size: 16px; -fx-font-weight: bold;"/>
            </VBox>

            <Separator/>
            
            <!-- Transactions Section -->
            <VBox spacing="10">
                <Label text="Transazioni" style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                
                <TableView fx:id="transactionsTableView" prefHeight="250">
                    <columns>
                        <TableColumn text="Direzione" prefWidth="80"/>
                        <TableColumn text="Importo" prefWidth="120"/>
                        <TableColumn text="Descrizione" prefWidth="200"/>
                        <TableColumn text="Data" prefWidth="120"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                </TableView>
            </VBox>

            <!-- Transaction Controls Section -->
            <VBox fx:id="userControlsPane" spacing="10">
                <Button text="Elimina Transazione Selezionata" 
                        onAction="#handleDeleteTransaction" 
                        maxWidth="Infinity"/>
                
                <Separator/>
                
                <Label text="Aggiungi Nuova Transazione" 
                       style="-fx-font-size: 14px; -fx-font-weight: bold;"/>
                
                <VBox spacing="5">
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <TextField fx:id="transactionDescriptionField" 
                                   promptText="Descrizione" 
                                   HBox.hgrow="ALWAYS"/>
                        <TextField fx:id="transactionAmountField" 
                                   promptText="Importo" 
                                   prefWidth="80"/>
                        <ChoiceBox fx:id="transactionCurrencyChoiceBox" 
                                   prefWidth="80"/>
                        <ChoiceBox fx:id="transactionDirectionChoiceBox" 
                                   prefWidth="100"/>
                    </HBox>
                    <HBox spacing="10" alignment="CENTER_LEFT">
                        <Label text="Tag:" style="-fx-font-weight: bold;"/>
                        <ListView fx:id="transactionTagsListView" 
                                  prefHeight="80" 
                                  HBox.hgrow="ALWAYS"/>
                        <Button text="Aggiungi" 
                                onAction="#handleAddTransaction"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
